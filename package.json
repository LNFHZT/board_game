{
  "name": "board_game",
  "version": "0.0.3",
  "description": "### 前言",
  "main": "/dist/app.js",
  "scripts": {
    "test": "ts-jest",
    "log": "npx conventional-changelog -p package.json -i ./docs/changelog/CHANGELOG.md -s -r 0",
    "serve": "nodemon --watch ./source/* -e ts --exec ts-node --files ./source/app.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.8",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "require-directory": "^2.1.1",
    "tslib": "1.11.2",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@types/jest": "^25.2.3",
    "@types/koa": "^2.11.3",
    "conventional-changelog": "^3.1.21",
    "conventional-changelog-cli": "^2.0.34",
    "cz-conventional-changelog": "^3.2.0",
    "cz-customizable": "^6.2.0",
    "ghooks": "^2.0.4",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "scope": {
        "required": false,
        "allowed": [
          "*"
        ],
        "validate": false,
        "multiple": false
      },
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "",
      "autoFix": false
    }
  },
  "directories": {
    "doc": "doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LNFHZT/board_game.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/LNFHZT/board_game/issues"
  },
  "homepage": "https://github.com/LNFHZT/board_game#readme"
}
